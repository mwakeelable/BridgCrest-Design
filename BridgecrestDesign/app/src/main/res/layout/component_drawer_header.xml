<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp" >

    <ImageView
        android:id="@+id/temp_pic_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/temp_profile_pic" />

    <TextView
        android:id="@+id/user_initials"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignBottom="@id/temp_pic_bg"
        android:layout_alignLeft="@id/temp_pic_bg"
        android:layout_alignRight="@id/temp_pic_bg"
        android:layout_alignTop="@id/temp_pic_bg"
        android:layout_margin="4dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/drawer_header_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/temp_pic_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:textColor="@android:color/white"
        android:gravity="center_horizontal"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/drawer_header_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/drawer_header_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:lineSpacingExtra="5dp"
        android:gravity="center_horizontal"
        android:lines="2"
        android:autoLink="email"
        android:textColor="@android:color/white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/drawer_header_job"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/white" />

</RelativeLayout>