<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/section_1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/component_white_bg"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/social"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/social_data"
        android:textColor="@color/coffe_brown" />

    <include layout="@layout/component_percentile_bar"/>

    <LinearLayout
        android:id="@+id/values_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/social_coworkers"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="N/A"
            android:textColor="@color/dark_green"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/social_total_hours"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="N/A"
            android:textColor="@color/dark_green"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/social_perfect_greens"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="N/A"
            android:textColor="@color/dark_green"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/labels_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/co_workers"
            android:textColor="@android:color/black"
            android:textSize="8sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/hours_slept"
            android:textColor="@android:color/black"
            android:textSize="8sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/perfect_greens"
            android:textColor="@android:color/black"
            android:textSize="8sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>